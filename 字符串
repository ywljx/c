//由双引号引起来的一串字符称为字符串字面值，或者简称字符串
// "abcdef"
// "hello world"
// ""   空字符串


#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h> 
int main()
{ 
	char arr1[] = "abc";
	printf("%s\n",arr1);
	return 0;
}
//结果 abc




#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h> 
int main()
{ 
	char arr1[] = "abc";   //数组
	// abc- 'a'  'b'  'c' '\0' --'\0'字符串的结束标志
	char arr2[] = { 'a','b','c','\0'};
  // char arr2 []={'a','b','c',0};   也可以替换上一行   原因：  \0的ASCII码值为0
	//'a'  'b'   'c'
	printf("%s\n",arr1);
	printf("%s\n", arr2);
	return 0;
}
//结果 abc   abc


#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h> 
int main()
{ 
	char arr1[] = "abc"; 
	char arr2[] = { 'a','b','c','\0'};
	printf("%d\n",strlen(arr1));//strlen 计算字符串长度的
	printf("%d\n",strlen(arr2));
	return 0;
}   
//结果 3 3


转义字符
#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h> 
int main()
{
	printf("c:\\test\\30\\test.c\n");
	return 0;
}
//结果   c:\test\30\test.c

